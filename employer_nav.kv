#:import C kivy.utils.get_color_from_hex
#:import NoTransition kivy.uix.screenmanager.NoTransition
<EmployerNav_Screen@MDScreen>:
    id:employer_main
    float_2:float_2
    MDFloatLayout: #employer_main.float_2.employer_nav.employer_home
        id: float_2
        employer_nav:employer_nav
        md_bg_color: C("2c4a6e") 
        ScreenManager:
            id: employer_nav
            employer_home:employer_home
            employer_menu:employer_menu
            name: "employer_nav"
            transition: NoTransition()
            md_bg_color: C("2c4a6e") 
            MDScreen:
                name: "employer_home"
                id: employer_home
                user_box:user_box
                MDLabel:
                    pos_hint: {'center_x': 0.50,'center_y': 0.94}
                    size_hint: 0.9, 0.8
                    font_size: 20
                    text: "CURRENT STATUS"# \nof employees"
                    bold: True
                    color: C("e8e8e8")
                MDLabel:
                    pos_hint: {'center_x': 0.50,'center_y': 0.91}
                    size_hint: 0.9, 0.8
                    font_size: 12
                    text: "OF EMPLOYEES"
                    bold: True
                    color: C("e8e8e8")
                GridLayout:
                    pos_hint: {'center_x': 0.55,'center_y': 0.43}
                    cols:3
                    rows:6
                    id: user_box
                    padding: 5
                    color: C("90b5cf")
                    size_hint: 1,0.9
                    adaptive_size: True
                    row_force_default: True 
                    row_default_height: 40
                    MDLabel: 
                        text:"Employee Name"
                        font_size: 15
                        bold:True
                        color: C("e8e8e8")
                        falign: "center"
                    MDLabel: 
                        text:"Fatigue status"
                        font_size: 15
                        bold:True
                        color: C("e8e8e8") 
                        falign: "center"
                    MDLabel: 
                        text:""
                        font_size: 15
                        bold:True   
                        color: C("e8e8e8")
                        falign: "center"

            MDScreen:
                id: employer_menu
                name: "employer_menu"
                company_field:company_field
                FloatLayout:
                    MDLabel:
                        text:"Your Company code is:"
                        pos_hint: {"center_y": .6}
                        font_size: 15
                        bold:True
                        color: C("e8e8e8")
                        halign: "center"
                    MDLabel:
                        name: "company_field"
                        id: company_field
                        font_size: 15
                        bold:True
                        color: C("e8e8e8")
                        text:"xxx"
                        pos_hint: {"center_y": .57}
                        halign: "center"
                    MDCard:    #card to button conversion via ripple
                        pos_hint: {'center_x':0.5,'center_y':.37}
                        size_hint: (.53,.05)
                        radius: 10
                        md_bg_color: (1,1,1,0)
                        ripple_behavior: True
                        Image:
                            source: "images/learn.png"
                        MDLabel:
                            font_size: 12
                            text: "Learn more\nabout fatigue"
                            color: C("c2d5db")
                    MDCard:    #card to button conversion via ripple
                        pos_hint: {'center_x':0.5,'center_y':.30}
                        size_hint: (.53,.05)
                        radius: 10
                        md_bg_color: (1,1,1,0)
                        ripple_behavior: True
                        #on_release: app.login(
                        Image:
                            source: "images/about.png"
                        MDLabel:
                            font_size: 12
                            text: "About the\n Developers"
                            color: C("c2d5db")
                    MDCard:    #card to button conversion via ripple
                        pos_hint: {'center_x':0.51,'center_y':.23}
                        size_hint: (.53,.05)
                        radius: 10
                        md_bg_color: (1,1,1,0)
                        ripple_behavior: True
                        on_release: app.logout()
                        Image:
                            source: "images/logout.png"
                        MDLabel:
                            font_size: 12
                            text: "Logout"
                            color: C("c2d5db")

        NavBar:
            size_hint: 1.05, .1
            pos_hint: {"center_x": .5, "center_y": 0.04}
            elevation: 0
            md_bg_color: C("dbdbdb")
            MDGridLayout:
                cols:2
                size_hint_x: .9
                spacing: 160
                pos_hint: {"center_x": .5, "center_y": .5}
                MDFlatButton:
                    id: nav_icon1
                    text: "FAMMA"
                    font_name: "Fonts/BebasNeue.otf"
                    font_size: "25sp"
                    ripple_scale: 0
                    theme_text_color: "Custom"
                    text_color: C("2c4a6e")
                    on_release:
                        employer_nav.current = "employer_home"
                        app.change_color(self)
                MDIconButton:
                    id: nav_icon4
                    icon: "menu"
                    ripple_scale: 0
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: C("2c4a6e")
                    on_release:
                        employer_nav.current = "employer_menu"
                        app.change_color(self)