            size_hint: 0.3,0.17
            background_color: 0,0,0,0
            pos_hint: {'center_x': 0.32,'center_y': 0.73}
            on_press: 
                app.main.employee_home_screen.float.main_screen.current = "survey_form_one"
                app.questionnaire("sleep",0)
        Image:
            pos_hint: {'center_x': 0.32,'center_y': 0.73}
            size_hint: 0.32,0.19
